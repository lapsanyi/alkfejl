{% extends 'master' %}

{% block title %}Delete{% endblock %}

{% block content %}
  <div class="container-fluid bg-1 text-center">
    <h2>Ticket törlése</h2>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form class="form-horizontal" method="POST">
          {{ csrfField }}
          <div class="form-group">
            <label for="inputText" class="col-sm-4 control-label">Ticket id</label>
            <div class="col-sm-8 left-panel">
              {{ ticket.id }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-4 control-label">Hozzárendelt</label>
            <div class="col-sm-8 left-panel">
              {{ ticket.user_id }}
            </div>
          </div>
          <div class="form-group">
            <label for="inputText" class="col-sm-4 control-label">Leírás</label>
            <div class="col-sm-8">
              <input type="textArea" disbale class="form-control" id="description" name="description" placeholder="">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <a class="btn btn-default btn-lg" href="">Törlés</a>
              <a type="submit" class="btn btn-default btn-lg">Mégsem</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
