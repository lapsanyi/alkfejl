{% extends 'master' %}

{% block title %}New{% endblock %}

{% block content %}
<div class="container-fluid bg-1 text-center">
  <h2>Új ticket</h2>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" method="POST">
        {{ csrfField }}
        <div class="form-group">
          <label for="inputText" class="col-sm-4 control-label">Státusz</label>
          <div class="col-sm-8">
            {% for stat in statuses %}
              {% if stat.id == 1 %}
              <input type="radio" checked name="status" value="{{ stat.id }}"> {{ stat.status_txt }}<br>
              {% else %}
                <input type="radio" name="status" value="{{ stat.id }}"> {{ stat.status_txt }}<br>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label">Hozzárendelt</label>
            <select name="user_id" class="col-sm-8 dropdown">
                {% for user in users %}
                <option value="{{ user.id }}">{{ user.username }}</option>
                {% endfor %}
            </select>
          </div>
        <div class="form-group">
          <label for="inputText" class="col-sm-4 control-label">Leírás</label>
          <div class="col-sm-8">
            <input type="textArea" class="form-control" id="description" name="description" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default btn-lg">Mentés</button>
            <button class="btn btn-default btn-lg">Mégsem</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
