{% extends 'master' %}

{% block title %}Belépés{% endblock %}
{% block content %}
<div class="container-fluid bg-1 text-center">
  <h2>Login</h2>

  {% if old('error') %}
  <div class="alert alert-danger" role="alert">Sikertelen belépési kísérlet.</div>
  {% endif %}

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" action="{{ 'do_login' | route }}" method="POST">

        {{ csrfField }}
        <div class="form-group">
          <label for="inputEmail" class="col-sm-4 control-label">User</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="inputEmail" name="username" placeholder="name">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="col-sm-4 control-label">Jelszó</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" id="inputPassword" name="password" placeholder="password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default btn-lg">Bejelentkezés</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}

